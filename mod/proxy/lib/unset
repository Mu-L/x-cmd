# shellcheck shell=dash

___x_cmd_proxy_unset(){
    [ $# -gt 0 ] || set - --everything
    
    case "$1" in
        -h|--help)
        x help -m proxy unset; return ;;
    esac
    
    while [ "$#" -gt 0 ]; do
        arg="$1";           shift
        case "$arg" in
            --http|http)
                proxy:info "UNSET http_proxy HTTP_PROXY"
            	export http_proxy=""  ;     export HTTP_PROXY=""  ;;
            --https|https)
                proxy:info "UNSET https_proxy HTTPS_PROXY"
            	export https_proxy="" ;     export HTTPS_PROXY="" ;;
            --ftp|ftp)
                proxy:info "UNSET ftp_proxy FTP_PROXY"
            	export ftp_proxy=""   ;     export FTP_PROXY=""   ;;
            --all|all)
                proxy:info "UNSET all_proxy ALL_PROXY"
            	export all_proxy=""   ;     export ALL_PROXY=""   ;;
            -e|--everything)
            	___x_cmd_proxy_unset http https ftp all     ;;
            
            *)      N=proxy M="Unexpected argument=$1" log:ret:64
        esac
    done
}
