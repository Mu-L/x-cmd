# shellcheck shell=dash

# https://serverfault.com/questions/93407/what-command-prints-a-string-as-big-ascii-text-art-in-bash

___x_cmd_cowsay___main(){
    while [ $# -gt 0 ]; do
        case "$1" in
            -e) shift;  ;;
            -f) shift;  ;;
            -T) shift;  ;;
            -W) shift;  ;;

            -b) ;;
            -d) ;;
            -g) ;;
            -p) ;;
            -s) ;;
            -w) ;;
            -y) ;;

            -h|--help) ___x_cmd_cowsay_help; return 1 ;;
            -l) ;;
            -L) ;;
            *) break ;;
        esac
        shift
    done

    local IFS=" "
    text="$*" ___x_cmd_cowsay_run cow
}

___x_cmd_cowsay_help(){
    x advise gen_help "$___X_CMD_ROOT_MOD/cowsay/res/advise.jso" >&2
}

___x_cmd_cowsay_run(){
    local IFS
    local typ="${1:-cow}"

    case "$typ" in
        cow|tux) [ "$#" -lt 1 ] || shift;  ;;
    esac

    printf "%s" "
 ______________________
< ${*:-$text} >
 ----------------------
"

    case "${typ:-cow}" in
        tux) cat <<'A'
   \
    \
        .--.
       |o_o |
       |:_/ |
      //   \ \
     (|     | )
    /'\_   _/`\
    \___)=(___/
A
    ;;

        *) cat <<'A'
        \   ^__^
         \  (oo)\_______
            (__)\       )\/\
                ||----w |
                ||     ||
A
    ;;
    esac
}

