# shellcheck shell=dash

___X_CMD_BUN_LOADED=
___x_cmd_bun_loaded(){
    [ -n "$___X_CMD_BUN_LOADED" ]
}

___x_cmd_bun_load(){
    ! ___x_cmd_bun_loaded || return 0

    ___x_cmd_bun_load_checkenv || {
        x:warn "Cannot find bun installed in this current environment"
        ___x_cmd_bun_load_env
        return
    }

    # TODO: In the future, we need to check the current version is good enough.

    ___X_CMD_BUN_LOADED=1
}

___x_cmd_bun_load_env(){
    # TODO: add quiet
    x:info "Loading deno in this shell env using 'x env try bun'"
    x env try bun
}

# TODO: Add yes and quiet in the future
___x_cmd_bun_load_checkenv(){
    x hascmd bun   || return
}
