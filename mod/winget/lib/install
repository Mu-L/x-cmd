# shellcheck shell=dash

___x_cmd_winget___install(){
    x pwsh <"$___X_CMD_ROOT_MOD/winget/lib/install.ps1"
}


___x_cmd_winget_install(){
    if [ "$#" -eq 0 ]; then
        ___x_cmd_winget___nv
        return 0
    fi

    local name="$1"
    ___x_cmd_winget___bin "install" "$name"
}


___x_cmd_winget___lsraw(){
    x ccmd 1d -- ___x_cmd_winget___main search "" | ___x_cmd_cmds awk 'DATA!=1{ if($0 ~ "^----------") DATA=1; next }DATA==1{print $1}'
}


___x_cmd_winget___nv(){
    { [ -t 1 ] && ___x_cmd_is_interactive; } \
        || {
            ___x_cmd_winget___lsraw
            return 0
        }

    local software=
    software="$(___x_cmd_winget___lsraw | x pick --width 40 --col 10)" \
        || {
            install:info "Exit because no software is selected."
            return 0
        }

    [ -n "$software" ] || return 1
    local id=
    x ui select id "What to do NEXT"                         \
        "x winget install $software"                         \
        "x winget find $software"                            \
        "EXIT"     || return

    case "$id" in
        1)      "$( ___x_cmd_winget___proxy___use \
                   ___x_cmd_winget___bin "install" "$software" )" ;;
                   
        2)         ___x_cmd_winget___bin "find" "$software"   ;;
        3)          return 0 ;;

    esac

}


