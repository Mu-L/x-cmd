# shellcheck shell=dash
___x_cmd_pacman___xmirror(){
    [ $# -gt 0 ]    ||  set - --help
    local op="$1";      shift
    case "$op" in
        ls|replace|set|\
        current|rollback)   x mirror pacman "$op" "$@" ;;  # In the future, we will put the mirror code here ...

        -h|--help)          x help -m pacman mirror             "$@"    ;;
        *)                  ___x_cmd_pacman_mirror___exec "$op" "$@"    ;;
    esac
}
