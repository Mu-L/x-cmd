

___x_cmd_mac_trash(){
    [ "$#" -gt 0 ] || set -- -h

    local op="$1";  shift
    case "$op" in
        ls|empty|size)
            ___x_cmd_mac_trash_"$op" "$@"
    esac
}

___x_cmd_mac_trash_empty(){
    sudo rm -rf ~/.Trash/*
}

___x_cmd_mac_trash_size(){
    du -sh ~/.Trash/
}

___x_cmd_mac_trash_ls(){
    ls -alh ~/.Trash/
}
