# shellcheck    shell=dash

xrc param/latest

x log init scotty

xrc:mod:lib scotty      ws mod/index      verify

___x_cmd_scotty___main(){
    param:advise scotty
    param:subcmd ___x_cmd_scotty            \
        init        "init"                  \
        verify      "verify"                \
        mod         "modules"               \
        ws          "workspace"             \
        bug         "bug report"            \
        has         "exist subcmd"          \
        log         "log collect"
    param:subcmd:try
    param:run

    ___x_cmd_scotty help
    return 1
}

___x_cmd_scotty_has(){
    param:void
    case "$1" in
        init|mod|ws|bug|has|log|help|-h)        return 0
    esac
    return 1
}

___x_cmd_scotty_init(){ param:void ; }
___x_cmd_scotty_bug(){  param:void ; }
___x_cmd_scotty_log(){  param:void ; }

