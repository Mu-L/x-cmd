# shellcheck shell=dash

# TODO: add some ui into it
___x_cmd_zig___main(){
    [ "$#" -gt 0 ] || {
        ___x_cmd_zig___command "$@"
        return
    }

    local op="$1"; shift
    case "$op" in
        tgt|target|targets)
                        ___x_cmd_zig___bin targets "$@" ;;


        *)              ___x_cmd_zig___bin "$op" "$@"
    esac
}

___x_cmd_zig___bin(){
    x hascmd zig || x env try zig || return
    # shellcheck disable=SC2317
    ___x_cmd_zig___bin(){
        ___x_cmd_zig___command "$@"
    }
    ___x_cmd_zig___command "$@"
}

___x_cmd_zig___command(){
    command zig "$@"
}
