# shellcheck shell=sh disable=SC3043

# using a csv app

# Using ls_remote
___x_cmd_llmf_model_nv()(
    local ___X_CMD_CSV_APP_DATA_version=""
    local ___X_CMD_CSV_APP_DATA_quant=""
    local ___X_CMD_CSV_APP_DATA_format=""
    ___x_cmd_llmf_model_ls___app --all --return var --clear
    [ -n "${___X_CMD_CSV_APP_DATA_version}" ] || return 1

    local selected="${___X_CMD_CSV_APP_DATA_version}"

    local id=
    x ui select id "Next"   \
       "Setting the default model as $selected" \
       "EXIT"

    case "$id" in
        1)  ___x_cmd_llmf_model_default set "$selected" ;;
        *)  return
    esac

    local x_=; ___x_cmd_llmf_model_default get_
    llmf:info "Current default model is ${x_:-"undefined"}"
)
