
___x_cmd_llmf_cli(){
    [ "$#" -gt 0 ]      ||   set - --help

    local prompt=""
    local model=""
    local mmproj=""

    local temp=0.8
    local edit=""

    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)      x help -m llmf cli;
                            return 1    ;;

            -m|--model)     model="$2";             shift 2 ;;
            --mmproj)       mmproj="$2";            shift 2 ;;

            -p|--prompt)    prompt="$prompt $2";    shift 2 ;;
            -t|--temp)      temp="$2";              shift 2 ;;
            -0)             temp=0;                 shift   ;;

            -|--edit)       edit=1;                 shift 1 ;;

            --)             shift;                  break ;;

            *)              prompt="$prompt $1";    shift   ;;
        esac
    done

    # Modifile a file ...
    [ -z "$edit" ] || prompt="$(x ted)"  # Based upon the prompt content, we can use ted to modify the prompt

    ___x_cmd cosmo llamafile "$@" --model "$model" --prompt "$prompt" --mmproj "$mmproj" --temp "$temp"
}
