# shellcheck shell=dash
___x_cmd log init grep

xrc:mod:lib     grep        fzf/_index

___x_cmd_grep___main(){
    [ "$#" -gt 0 ] ||   set -- --fzfapp

    local op="$1"; shift
    case "$op" in
        --fzfapp|--fzfapppreview)
                ___x_cmd_grep___"${op#--}"  "$@" ;;

        --cmd)  ___x_cmd_grep___cmd         "$@" ;;
        *)      ___x_cmd_grep___cmd "$op"   "$@" ;;
    esac
}

___x_cmd_grep___cmd(){
    # We can consider using cosmo gnu grep
    ___x_cmd_cmds grep "$@"
}
