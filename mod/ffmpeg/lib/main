# shellcheck shell=dash

xrc:mod:lib   ffmpeg  ddgo    merge

___x_cmd_ffmpeg___main(){
    [ "$#" -gt 0 ] ||  set - --help

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m ffmpeg       ;;
        :|ddgo)         ___x_cmd_ffmpeg_ddgo     "$@" ;;
        merge)          ___x_cmd_ffmpeg_merge    "$@" ;;
        --|--cmd)       ___x_cmd ff mpeg         "$@" ;;
        *)              ___x_cmd ff mpeg "$op"   "$@" ;;
    esac
}
