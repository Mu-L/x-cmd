# shellcheck shell=bash
___x_cmd_shodan_notifier_info(){
    local id="$1"
    [ -n "$id" ] || N=shodan M="Provide a Notifier ID" log:ret:64

    if  ! ___x_cmd_shodan_is_interactive_env; then
        ___x_cmd_shodan_notifier_info___curl
        return
    fi

    ___x_cmd_shodan_notifier_info___curl | x j2y
}

___x_cmd_shodan_notifier_info___curl(){
    # shodan:info ___x_cmd_shodan_curl get "/notifier/${id}"
    X_CCMD_TIMEOUT=10m ___x_cmd_shodan_curl get "/notifier/${id}"
}
