# shellcheck shell=dash
___x_cmd_shodan_alert_trigger_ls(){
    shodan:info "Obtain a list of available triggers"

    if  ! ___x_cmd_shodan_is_interactive_env; then
        ___x_cmd_shodan_alert_trigger_ls___curl
        return
    fi

    ___x_cmd_shodan_alert_trigger_ls___csv | x csv app --width 30%,30%,30%
}

___x_cmd_shodan_alert_trigger_ll(){
    shodan:info "Obtain a list of available triggers"

    if  ! ___x_cmd_shodan_is_interactive_env; then
        ___x_cmd_shodan_alert_trigger_ls___curl
        return
    fi

    ___x_cmd_shodan_alert_trigger_ls___csv | x static_table
}

___x_cmd_shodan_alert_trigger_ls___curl(){
    ___x_cmd_shodan_curl get "/shodan/alert/triggers"
}

___x_cmd_shodan_alert_trigger_ls___csv(){
    ___x_cmd_shodan_alert_trigger_ls___curl |\
        x ja 2c .name .rule .description |\
        x csv header --add  Name Rule  Description
}