
___x_cmd_gtb_show(){
    ___x_cmd_gtb_show___auto "$@"
}

___x_cmd_gtb_show___auto(){
    if [ -t 1 ] && ___x_cmd_is_interactive; then
        ___x_cmd_gtb_show___raw "$@" | ___x_cmd bat
    else
        ___x_cmd_gtb_show___raw "$@"
    fi
}

___x_cmd_gtb_show___raw(){
    ___x_cmd_gtb_txt_cat "$@" | command awk -f "$___X_CMD_ROOT_MOD/gtb/lib/awk/show.awk"
}
