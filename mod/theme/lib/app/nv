# shellcheck shell=dash

___x_cmd_theme_nv(){
    local id=
    local cmd=

    x ui select id,cmd "Next"  \
        "x theme --app                      # Open theme app"       \
        "x open https://x-cmd.com/theme     # theme gallery online" \
        "x theme -h                         # open help"            \
        "return 0"                                                  \
    || return
    # TODO: Maybe ...
    eval "$cmd"
}
