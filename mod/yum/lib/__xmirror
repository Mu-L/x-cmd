# shellcheck shell=dash
___x_cmd_yum___xmirror(){
    [ $# -gt 0 ]    ||  set - --help
    local op="$1";      shift

    local O=yum
    case "$op" in
        ls|set|unset|current)      x mirror yum               "$op" "$@" ;;  # In the future, we will put the mirror code here ...
        -h|--help)                 x help -m yum mirror             "$@" ;;
        *)                         ___x_cmd_yum_mirror___exec "$op" "$@" ;;
    esac
}


