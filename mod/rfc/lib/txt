# shellcheck shell=dash

___x_cmd_rfc_txt(){
    [ "$#" -gt 0 ] ||   set - --help

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m rfc txt        "$@" ;;

        *)              ___x_cmd_rfc_txt___raw  "$op"   "$@" ;;
    esac
}

___x_cmd_rfc_txt___raw(){
    local id="$1" || M='Provide a id' N=rfc log:ret:1
    ___x_cmd ccmd 1d -- ___x_cmd curl "https://www.rfc-editor.org/rfc/rfc${id}.txt"
}

