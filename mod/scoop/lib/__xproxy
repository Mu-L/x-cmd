# shellcheck shell=dash

___x_cmd_scoop___xproxy(){
    [ $# -gt 0 ]    ||  set - ls
    local op="$1";      shift

    local O=scoop
    case "$op" in
        ls|unuse|untry|run)
            ___x_cmd proxy wrap "$op"  "$@"   ;;

        use|try)
            ___x_cmd proxy wrap "$op"  "$@" || return
            scoop:info "Clean up the native proxy settting"
            x scoop config proxy ""           ;;

        -h|--help)
            x help -m scoop proxy      "$@"   ;;
    esac
}
