# shellcheck shell=dash
# https://ai.google.dev/api/rest/v1beta/models/list?hl=zh-cn
___x_cmd_gemini_request_ls(){
    local apikey
    ___x_cmd_gemini_cur apikey:= 2>/dev/null
    [ -n "$apikey" ] || {
        gemini:error "Please setting up your apikey first ==> 'x gemini --cfg apikey=<your apikey>'"
        return 1
    }

    x curl -s "${___X_CMD_GEMINI_ENDPOINT}/v1beta/models?key=${apikey}"
}

# https://ai.google.dev/api/rest/v1beta/models/get?hl=zh-cn

# model info: https://ai.google.dev/api/rest/v1beta/models?hl=zh-cn
___x_cmd_gemini_request_ll(){
    local model="$1"
    local apikey
    ___x_cmd_gemini_cur apikey:= 2>/dev/null
    [ -n "$apikey" ] || {
        gemini:error "Please setting up your apikey first ==> 'x gemini --cfg apikey=<your apikey>'"
        return 1
    }

    x curl -s "${___X_CMD_GEMINI_ENDPOINT}/v1beta/models/$model?key=${apikey}"
}
