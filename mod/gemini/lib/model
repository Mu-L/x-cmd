# shellcheck shell=dash

___x_cmd_gemini_model(){
    [ $# -gt 0 ]    ||  set - ls

    local op="$1";      shift
    case "$op" in
        ls|ll)          ___x_cmd_gemini_model_"$op" "$@"     ;;
        -h|--help)      x help -m gemini model               ;;
        *)              x help -m gemini model >&2; return 1 ;;
    esac
}

___x_cmd_gemini_model_ll(){
    ___x_cmd_gemini_request_ll "$@" | x j2y
}


___x_cmd_gemini_model_ls(){
    [ $# -gt 0 ]    ||  set - --app

    local op="$1";      shift
    case "$op" in
        --app|--csv|--json)
                        ___x_cmd_gemini_model_ls_"${op#*--}" "$@" ;;
        -h|--help)      x help -m gemini model ;;
    esac
}

___x_cmd_gemini_model_ls_app(){
    ___x_cmd_gemini_model_ls_csv | x csv app
}

___x_cmd_gemini_model_ls_csv(){
    ___x_cmd_gemini_request_ls | x jo .models | x jo 2c .name .description  \
                               | x csv header      --add Name  Description
}

___x_cmd_gemini_model_ls_json(){
    ___x_cmd_gemini_request_ls
}
