# shellcheck shell=bash disable=SC2034,SC2154
# Section: Close
# https://gitea.com/api/swagger#/issue/issueDelete
___x_cmd_fjo_issue_close(){
     param:scope     ___x_cmd_fjo
    param:dsl       '
options:
    --repo|-r      "Provide owner name and repo name.(default:the current user repo)"      <>:RepoName
    #1          "The number that identifies the issue."                                    <>:number

    --json|-j   "output json data"
'
    param:run

    local state=closed

    ___x_cmd_fjo_param_init_owner_repo
    ___x_cmd_fjo_curl patch "/repos/${owner_repo}/issues/${1}" -- state | _____x_cmd_fjo_issue_ui_utils Close
}
# EndSection
