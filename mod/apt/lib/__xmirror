# shellcheck shell=dash
___x_cmd_apt___xmirror(){
    [ $# -gt 0 ]    ||  set - --help
    local op="$1";      shift

    local O=apt
    case "$op" in
        ls|set|unset|current)      x mirror apt               "$op" "$@" ;;  # In the future, we will put the mirror code here ...
        -h|--help)                 x help -m apt mirror             "$@" ;;
        *)                         ___x_cmd_apt_mirror___exec "$op" "$@" ;;
    esac
}


