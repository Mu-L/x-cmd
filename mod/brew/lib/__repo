# shellcheck shell=dash

___x_cmd_brew___repo_ls(){
    # using ccmd
    # x ccmd 1d -- ___x_cmd_cmds brew info --json --eval-all | x jo env 1.\* .name -- 'printf "%s\n" $name' # 10s

    x ccmd 1d -- ___x_cmd_brew___repo_ls__all | x jq -r '.[].name' # 0.7s
}

___x_cmd_brew___repo_lsname(){
    ___x_cmd_cmds brew formulae
}

# ls to csv
___x_cmd_brew___repo_ls_csv(){
    # json to csv
    # x ccmd 1d -- ___x_cmd_cmds brew info --json --eval-all | x jo 2c .name .desc # 12s
    x ccmd 1d -- ___x_cmd_brew___repo_ls__all | x jq -r '.[] | [.name, .desc] | @csv' # 0.7s
}

___x_cmd_brew___repo_browse(){
    [ $# -gt 0 ] || {
        x browse https://formulae.brew.sh/formula/
        return
    }

    x browse "https://formulae.brew.sh/formula/$1"
}

___x_cmd_brew___repo_search(){
    ___x_cmd_cmds brew search "$1"
}

___x_cmd_brew___repo_ls__all(){
    brew:info "Now, getting the list of all software from brew. Please wait..."
    ___x_cmd_cmds brew info --json --eval-all
}
