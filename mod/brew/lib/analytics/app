# shellcheck shell=dash

# 1. current analyt
# 1. shutdown analytics # check
# 2. check analytci
___x_cmd_brew_analytics_nv(){
    local state; state="$(___x_cmd_brew___exec analytics state)"

    if [ "$state" = on ]; then
        brew:warn "Analytics is ON."

        local id
        x ui select id "Select an option" \
            "x brew analytics off      # shutown analytics" \
            "x brew analytics data     # show analytics data" \
            "x brew analytics state    # display state of analytics." \

        case "$id" in
            1) x brew analytics off   ;;
            2) x brew analytics data  ;;
            3) x brew analytics state ;;
        esac
    else
        x ui select id "Select an option" \
            "x brew analytics data     # display state of analytics." \
            "x brew analytics state    # show analytics data." \
            "x brew analytics on       # turn on analytics"

        case "$id" in
            1) x brew analytics data ;;
            2) x brew analytics state ;;
            3) x brew analytics on ;;
        esac
    fi
}
