# shellcheck shell=dash

# https://docs.brew.sh/Analytics
# Put it on the advise of the user
# x brew a off
xrc:mod:lib     brew   analytics/app analytics/data
___x_cmd_brew_analytics(){
    [ "$#" -gt 0 ] ||   set -- --help

    # disable
    local op="$1"; shift
    case "$op" in
        # View the analytics data
        browse)
            x browse "https://formulae.brew.sh/analytics"
            return  ;;
        data)
            ___x_cmd_brew_analytics_data "$@"
            return  ;;
        on|off|state)
            brew analytics "$op"
            return  ;;
    esac
    ___x_cmd_brew___exec analytics "$op" "$@"
}
