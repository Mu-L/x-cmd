
___x_cmd_dns_refresh(){
    local x_
    x os name_
    case "$x_" in
        darwin)
            x sudo killall -HUP mDNSResponder
            ;;
        linux)
            command systemd-resolve --flush-caches || {
                dns:error "DNS refresh failed"
                return 1
            }
            dns:info "DNS refresh successful"
            ;;
        win)
            xrc pwsh; ___x_cmd_pwsh___exec txt ipconfig /flushdns
            ;;
        *)
            dns:error "Unsupported os ==> $x_"
            return 1
            ;;
    esac
}
