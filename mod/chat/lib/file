
# , --fsjs a.txt b.txt c.txt
# [ <content of a.txt> , , ]
# fs json stringinfy
___x_cmd_chat_fjs(){
    local IFS="$___X_CMD_UNSEENCHAR_NEWLINE"

    # using awk to stringify
#    jiter_tokenized_normalized( cat("aa") )
    filelist="$*" awk 'BEGIN{ print ENVIRON[ "filelist" ] }'
}

# fs json parse
___x_cmd_chat_fjp(){
    local filelist=""
    local e
    while [ $# -gt 0 ]; do
        e="$1"
        while [ -e "$e" ]; do
            e="${e}.bak"
        done

        filelist="${filelist}$e
"
        shift
    done

    # using awk to parse to files
    filelist="$*" awk 'BEGIN{ print ENVIRON[ "filelist" ] }'
}

