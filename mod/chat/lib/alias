# shellcheck shell=dash disable=SC2139
# Alias in the xrc ...

# llmf
___x_cmd_chat_alias_init(){
    local i; for i in gpt gpt3 gpt4 gemini mistral ollama kimi; do
        ___x_cmd_chat_alias_init0 "$i"
    done
}

___x_cmd_chat_alias_init0(){
    local name="${1:-gemini}"
    alias "@${name}"="___X_CMD_CHAT_NORMAL_ALIAS=${name} ___x_cmd chat --send"
    ! ___x_cmd_is_suitable_advise_env || {
        [ ! -f "$___X_CMD_ROOT_ADV/chat/data/exec.jso" ] || \
            ___x_cmd_advise init "@${name}" "$___X_CMD_ROOT_ADV/chat/data/exec.jso"
    }
}

