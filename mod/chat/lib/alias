# shellcheck shell=dash disable=SC2139
# Alias in the xrc ...

# llmf
___x_cmd_chat_alias_init(){
    local i; for i in "" gpt gpt3 gpt4 gpt4t gemini mistral kimi o l; do
        ___x_cmd_chat_alias_init0 "$i"
    done
}

___x_cmd_chat_alias_init0(){
    local name="${1}"
    alias "@${name}"="___X_CMD_CHAT_NORMAL_ALIAS=${name} ___x_cmd chat --send"

    ! ___x_cmd_is_suitable_advise_env || {
        [ ! -f "$___X_CMD_ROOT_ADV/chat/data/exec.jso" ] || \
            ___x_cmd_advise init "@${name}" "$___X_CMD_ROOT_ADV/chat/data/exec.jso"
    }
}


___x_cmd_chat_aliasinit(){
    [ $# -gt 0 ]    ||      set -- --help
    local op="$1";  shift
    case "$op" in
        --code|--code_|--cshcode|--cshcode_)
                        ___x_cmd_chat_aliasinit_"${op#--}"   "$@" ;;
        *)              return 1
    esac
}

___x_cmd_chat_aliasinit_code_(){
    x_=""
    local name; for name in "" gpt gpt3 gpt4 gpt4t gemini mistral kimi o l; do
        x_="${x_}alias @${name}=\"___X_CMD_CHAT_NORMAL_ALIAS=${name} ___x_cmd chat --send\" ;
"
    done
}

___x_cmd_chat_aliasinit_code(){
    local x_=""
    ___x_cmd_chat_aliasinit_code_ || return
    printf "%s\n" "$x_"
}

___x_cmd_chat_aliasinit_cshcode_(){
    x_=""
    local name; for name in gpt gpt3 gpt4 gpt4t gemini mistral kimi o l; do
        x_="${x_}alias @""${name}"" setenv ___X_CMD_CHAT_NORMAL_ALIAS ${name} \; ___x_cmd chat --send ;
"
    done

    x_="${x_}"'alias @@ setenv ___X_CMD_CHAT_NORMAL_ALIAS "" \; ___x_cmd chat --send ;
'

}

___x_cmd_chat_aliasinit_cshcode(){
    local x_=""
    ___x_cmd_chat_aliasinit_cshcode_ || return
    printf "%s\n" "$x_"
}
