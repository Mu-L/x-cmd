# shellcheck shell=dash

___x_cmd_chat_handler___stream_to_print(){
    x cawk -m j/json,j/jiter \
        -f "$___X_CMD_ROOT_MOD/chat/lib/awk/stream_to_print.awk"
}

___x_cmd_chat_handler___get_response(){
    x cawk -m j/json,j/jiter,j/jcp \
        -f "$___X_CMD_ROOT_MOD/chat/lib/awk/get_response.awk"
}


___x_cmd_chat_handler___get_history_record(){
    local dir="$1"
    local history_size="$2"
    [ -d "$dir" ] || return

    # TODO: Optimized version: Get rid of y2j
    x fsiter "$dir" | sort -r | history_size="$history_size" BASE_PATH="$dir" \
    x cawk  -m j/json,j/jiter \
            -f "$___X_CMD_ROOT_MOD/chat/lib/awk/get_history_record.awk"
}