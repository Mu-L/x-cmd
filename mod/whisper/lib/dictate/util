
# shellcheck shell=dash

# TODO: considering using the default model ...
___x_cmd_whisper___dictate___desicemodel_(){
    ___x_cmd_whisper_model_default get_
    if [ -n "$x_" ]; then
        local id
        x ui select id "Model is not specified, so"   \
            "Using default [model=$x_]"           \
            "Open CSV app for the model"    \
            EXIT

        case "$id" in
            1)      return 0 ;;
            2)      ___x_cmd_whisper_model_ls___app_ ;;
            *)      return 1 ;;
        esac
    fi
}



