# shellcheck shell=dash
___x_cmd_ollama_model_has_model(){
    local model="$1"
    [ -n "$model" ] || N=ollama M="Please provide a model name"   log:ret:64;
    [ "$model" != "${model%:*}" ] || model="${model}:latest"

    local l
    while read -r l; do
        [ "$l" = "${l%%"${model}"*}" ] || return 0
    done <<A
$(___x_cmd_ollama___bin ls)
A
    return 1
}

___x_cmd_ollama_is_installed(){
    if ! x hasbin ollama; then
        ___x_cmd_ui_yesno "You have to install an ollama firstly, Do you want to download ?" || return
        x install ollama
    fi
}
