# shellcheck shell=dash

x log init ollama

xrc:mod:lib     ollama   install uninstall model/_index  util cfg

___x_cmd_ollama___main(){
    [ "$#" -gt 0 ] ||   set - --help

    local op="$1"; shift
    case "$op" in
        chat)       ___x_cmd_ollama_chat       "$@" ;;
        model)      ___x_cmd_ollama_model      "$@" ;;
        cfg|--cfg)  ___x_cmd_ollama_cfg        "$@" ;;
        init)       ___x_cmd_ollama_init            ;;
        api)    ;;

        install|uninstall)
                    "___x_cmd_ollama___${op}" "$@"       ;;
       -h|--help)   x help -m ollama "$@"                ;;
        *)          ___x_cmd_ollama___bin     "$op" "$@" ;;
    esac
}

___x_cmd_ollama___bin(){
    ___x_cmd_cmds ollama "$@"
}

